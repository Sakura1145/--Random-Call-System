        <option value="A班">A班</option>
        <option value="B班">B班</option>
        <option value="C班">C班</option>
    </select>
    <input type="text" id="studentName" placeholder="输入学生姓名">
    <button onclick="addStudent()">添加学生</button>

    <p id="studentList" style="display: none;"></p>
